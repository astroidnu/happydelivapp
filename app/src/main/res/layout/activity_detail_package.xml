<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">
        <include
            layout="@layout/activity_toolbar"/>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <fragment
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ProgressBar
            android:id="@+id/pb_detail_package"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.CardView
            android:background="@color/colorWhite"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_company_name"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JNE Indonesia"/>
                    <TextView
                        android:id="@+id/tv_detail_track_id"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track ID : 999-99-999-99"/>
                </RelativeLayout>
                <View
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:background="@color/colorLightGrey"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_gravity="center_vertical"
                        android:padding="8dp"
                        android:id="@+id/iv_courier_photo"
                        android:src="@drawable/ic_logo_jne"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <View
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="0.5dp"
                        android:background="@color/colorLightGrey"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:layout_weight="4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_courier_name"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:text="Bapak Driver"/>
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_duration"
                            android:layout_marginTop="4dp"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10 Mins to arrive"/>
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_distance"
                            android:layout_marginTop="4dp"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10 Km"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:background="@color/colorLightGrey"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:padding="8dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/btn_phone_driver"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_phone_24dp"/>
                    <ImageButton
                        android:padding="8dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/btn_message_driver"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_email_24dp"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>