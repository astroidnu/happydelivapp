<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:id="@+id/iv_expedition_logo"
            android:src="@drawable/ic_logo_jne"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="0.5dp"
            android:background="@color/colorLightGrey"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_package_expedition_name"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JNE Indonesia"/>
            <TextView
                android:id="@+id/tv_package_track_id"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Track ID : 999-99-999-99"/>
            <TextView
                android:id="@+id/tv_package_resi_no"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Resi : 1234-1234-123"/>
            <TextView
                android:id="@+id/tv_package_status"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="On the way with courrier"/>
            </LinearLayout>
            <View
                android:layout_weight="0.1"
                android:layout_gravity="right"
                android:layout_width="6dp"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent"/>
    </LinearLayout>
</android.support.v7.widget.CardView>